<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register/Login Page</title>
    <link rel="stylesheet" type="text/css" href="../public/css/styles.css">
</head>
<body>    
    
    <div class="form_wrapper">
        <div class="form_container">
            <div class="section">
                <div class="sign-up">
                    <button id="showSignupForm" onclick="showForm('signupForm')">Signup</button>
                </div>
                <div class="sign-in">
                    <button id='showLoginForm' onclick="showForm('loginForm')">Login</button> 
                </div>
            </div>
            
                <form action="/Signin" method="post" id="signupForm">
                    <div class="title">
                        <h2>Create new account</h2>
                    </div>
                    <div class="row-fix">
                        <div class="cont">
                            <input type="email" id="name" class="input-field" name="email" placeholder="Email" required />
                        </div>
                        <div class="cont">
                            <input type="password" id="password" class="input-field" name="password" placeholder="Password" required />
                        </div>
                        <div class="cont"> 
                            <input type="password" id="ReTypePassword" class="input-field" name="ReTypePassword" placeholder="Re-type Password" required />
                        </div>
                        <div class="row-fix2">
                            <input type="text" id="FirstName" class="input-field2" name="FirstName" placeholder="First Name" />     
                            <input type="text" id="LastName" class="input-field2" name="LastName" placeholder="Last Name" required />
                        </div>
                        <div class="radio_option">
                            <input type="radio" name="Gender" id="rd1" value="Male">
                            <label for="rd1">Male</label>
                            <input type="radio" name="Gender" id="rd2" value="Female">
                            <label for="rd2">Female</label>
                        </div>
                        <div class="register-btn">
                            <button type="submit" class="sub-btn">Submit</button>
                        </div>  
                    </div>
                </form>
                
                <form action="/Login" method="post" id="loginForm">
                    <div class="title2">
                        <h2>Login</h2>
                    </div>
                    <div class="row-fix">
                        <div class="cont">
                            <input type="email" class="input-field" name="email" placeholder="Email" required />
                        </div>
                        <div class="cont">
                            <input type="password" class="input-field" name="password" placeholder="Password" required />
                        </div>

                        <button type="submit" value="login" class="log-btn">Login</button>
                    </div>
                </form>
        </div>
    </div>

    <script src="../public/js/form.js" type="application/javascript"></script>
    
</body>
</html>